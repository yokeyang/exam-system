extends head
block title
    title Office
block content
    .outer.row
        h2.text-center Office Page
        .col-md-6.col-xs-10
            ul.breadcrumb
                li
                    a(href="#teacher") Manager Teacher
                li
                    a(href="#paper") Manager Paper
            
            .tab-content
                .tab-pane.in.active#paper
                    for data in datas
                        .well
                            p
                                strong Title:
                                |#{data.sbj}
                            p
                                strong Teacher:
                                |#{data.name}
                            p
                                strong Time:
                                |#{data.time}
                            p#well-bottom
                                a(href = data.file target="_blank") Click to view Paper
                                a(href = "javascript:void(0)") Click to Delete
                .tab-pane#teacher
                    .well
                        p
                            strong Name:
                            |Yoke
                        p
                            strong Title:
                            |Perfessor
                        p
                            strong Age:
                            |18
                        p
                            strong Password:
                            |*******
                        p#well-bottom
                            a(href = "javascript:void(0)") Delete
                            a(href = "javascript:void(0)") Change Info